@model WebsiteBanHang.Connect.Product

@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper py-4 bg-light">
    <div class="alert alert-warning text-center" role="alert">
        <h3>Bạn có chắn chắc xóa sản phẩm này không?</h3>
    </div>

    <div class="product-details bg-white p-4 rounded shadow-sm">
        <h4 class="mb-3">Product Details</h4>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <p><strong>Name:</strong> @Html.DisplayFor(model => model.Name)</p>
                <p><strong>Description:</strong> @Html.DisplayFor(model => model.Description)</p>
                <p><strong>Details:</strong> @Html.DisplayFor(model => model.Details)</p>
                <p><strong>Price:</strong> @Html.DisplayFor(model => model.Price)</p>
                <p><strong>Brand:</strong> @Html.DisplayFor(model => model.Brand.Name)</p>
                <p><strong>Category:</strong> @Html.DisplayFor(model => model.Category.Name)</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="@Url.Content("~/Content/images/product/" + Model.Images)"
                     alt="@Model.Name" class="img-fluid rounded mb-3" style="max-width: 100%; height: auto;" />
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions text-center mt-4">
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay trở lại</a>
            </div>
        }
    </div>
</div>
