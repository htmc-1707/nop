@model WebsiteBanHang.Connect.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* Màu xanh đen cho văn bản và nút */
    .text-dark-blue {
        color: #1e2a38 !important;
    }

    .bg-dark-blue {
        background-color: #1e2a38 !important;
        border-color: #1e2a38 !important;
    }

        .bg-dark-blue:hover {
            background-color: #17202a !important;
            border-color: #17202a !important;
        }
</style>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h4 class="text-dark-blue">Chỉnh sửa danh mục</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#" class="text-dark-blue">Trang chủ</a></li>
                        <li class="breadcrumb-item active text-dark-blue">Chỉnh sửa danh mục</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary">
                    <div class="card-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <!-- Tên danh mục -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, "Tên danh mục", htmlAttributes: new { @class = "col-md-3 control-label text-dark-blue" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Danh mục cha -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.ParentId, "Danh mục cha", htmlAttributes: new { @class = "col-md-3 control-label text-dark-blue" })
                            <div class="col-md-9">
                                @Html.DropDownList("ParentId", null, "Chọn danh mục cha", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Ảnh -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Image, "Ảnh danh mục", htmlAttributes: new { @class = "col-md-3 control-label text-dark-blue" })
                            <div class="col-md-9">
                                <img src="@Url.Content("~/Content/images/categories/" + Model.Image)" width="150" height="150" class="mb-3 rounded shadow-sm">
                                @Html.Hidden("oldimage", @Model.Image)
                                @Html.TextBoxFor(model => model.Image, null, new { type = "file", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Status, "Trạng thái", htmlAttributes: new { @class = "col-md-3 control-label text-dark-blue" })
                            <div class="col-md-9">
                                <div class="form-check">
                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-check-input" } })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <!-- Nút hành động -->
                        <div class="form-group row">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn bg-dark-blue text-white btn-lg mr-3">
                                    <i class="fas fa-save mr-2"></i> Lưu
                                </button>
                                <button type="reset" class="btn btn-danger btn-lg mr-3">
                                    <i class="fas fa-undo mr-2"></i> Làm lại
                                </button>
                                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn bg-dark-blue text-white btn-lg" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</div>
