@model WebsiteBanHang.Connect.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-3">
                <div class="col-sm-6">
                    <h2 class="text-dark">Chi tiết danh mục</h2>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="card card-solid shadow-sm">
            <div class="card-body">
                <div class="row">
                    <!-- Hình ảnh danh mục -->
                    <div class="col-12 col-sm-6 mb-4 text-center">
                        <img src="@Url.Content("~/Content/images/categories/" + Model.Image)" alt="@Model.Name" class="img-fluid rounded shadow-sm" width="100" height="auto">
                    </div>

                    <!-- Thông tin danh mục -->
                    <div class="col-12 col-sm-6">
                        <h3 class="my-3 text-primary">@Html.DisplayFor(model => model.Name)</h3>
                        <p class="text-muted">Thông tin chi tiết về danh mục sản phẩm</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left mr-2"></i> Trở lại
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-success btn-lg ml-2">
                        <i class="fas fa-edit mr-2"></i> Sửa
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
