@model WebsiteBanHang.Connect.Brand

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card" style="border-color: #0a0f1c;">
            <div class="card-header text-white" style="background-color: #1b2a41;">
                <h3 class="card-title">Thông tin thương hiệu</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <img src="@Url.Content("~/Content/images/brand/" + Model.Image)" class="img-fluid" alt="@Model.Name" style="max-width: 300px; max-height: 300px; border: 2px solid #0a0f1c;">
                    </div>
                    <div class="col-md-6">
                        <h3 style="color: #0a0f1c;">@Html.DisplayFor(model => model.Name)</h3>
                        <p>
                            @if (Model.Status == true)
                            {
                                <span class="badge" style="background-color: #0a0f1c;">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Ngưng hoạt động</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn", style = "background-color: #1b2a41; color: white; border-color: #0a0f1c;" })
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn", style = "background-color: #1b2a41; color: white; border-color: #0a0f1c;" })
                </div>
            </div>
        </div>
    </section>
</div>
