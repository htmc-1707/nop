@model WebsiteBanHang.Connect.Brand

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4>Chỉnh sửa danh mục</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Hình thức</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main Content Section -->
    <section class="content">
        @using (Html.BeginForm("Edit", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-8 mx-auto">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin danh mục</h3>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <!-- Tên danh mục -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, "Tên", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Ảnh danh mục -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Image, "Ảnh", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                            <div class="col-md-10">
                                <img src="@Url.Content("~/Content/images/brand/" + Model.Image)" width="150" height="150" class="mb-2">
                                @Html.Hidden("oldimage", @Model.Image)
                                @Html.TextBoxFor(model => model.Image, null, new { type = "file", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Trạng thái -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Status, "Trạng thái", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <!-- Nút Lưu và Làm lại -->
                        <div class="form-group row">
                            <div class="col-md-10 offset-md-2">
                                <input type="submit" value="Lưu" class="btn btn-success" />
                                <input type="reset" value="Làm lại" class="btn btn-warning" />
                                @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary float-right" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
</div>
